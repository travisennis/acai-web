{
  "name": "acai-web",
  "type": "module",
  "scripts": {
    "dev": "node --experimental-strip-types --watch source/index.ts",
    "build": "vite build --mode client && vite build",
    "lint": "biome lint",
    "lint:fix": "biome lint --unsafe --write",
    "lint:staged": "biome lint --error-on-warnings --no-errors-on-unmatched --staged",
    "format": "biome format --write",
    "oxlint": "npx oxlint@latest --ignore-path .gitignore --deny correctness --deny suspicous --deny pedantic --deny style --node-plugin",
    "knip": "npx knip",
    "check": "npx npm-check-updates  --interactive --format group"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.5",
    "@ai-sdk/azure": "^1.0.10",
    "@ai-sdk/openai": "^1.0.8",
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.5",
    "@hono/zod-validator": "^0.4.1",
    "@socket.io/redis-streams-adapter": "^0.2.2",
    "ai": "^4.0.14",
    "hono": "^4.6.13",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/vite-build": "^1.1.1",
    "@hono/vite-dev-server": "^0.17.0",
    "@types/node": "^22.10.2",
    "prettier": "3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
